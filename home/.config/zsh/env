#!/usr/bin/env zsh

BAT_STYLE="full"
DARK_MODE_ACTIVE=$(defaults read -g AppleInterfaceStyle &>/dev/null && echo 1 || echo 0)
BAT_THEME="$([[ $DARK_MODE_ACTIVE = 1 ]] && echo 'ansi' || echo 'GitHub')"
EDITOR="nvim"
ESCDELAY=0
FZF_CTRL_T_OPTS="--delimiter '/' --nth '-1' --preview '([[ -d {} ]] && tree -C {}) || ([[ -f {} ]] && bat {}) || echo {}'"
FZF_THEME='--color=fg:7,bg:0,hl:6
--color=fg+:7,bg+:8,hl+:3
--color=info:15,prompt:1,pointer:5
--color=marker:2,spinner:3,header:6'
FZF_CTRL_T_COMMAND="rg --files"
FZF_DEFAULT_COMMAND="rg --files"
FZF_DEFAULT_OPTS="$FZF_THEME"
GIT_CONFIG_COUNT=1
GIT_CONFIG_KEY_0="delta.syntax-theme"
GIT_CONFIG_VALUE_0="$BAT_THEME"
HISTFILE=~/Documents/Dotfiles/zsh-history
HISTSIZE=655360
HISTTIMEFORMAT="[%F %T] "
KEYTIMEOUT=1
LC_ALL="en_US.UTF-8"
RIPGREP_CONFIG_PATH="$HOME/.config/ripgreprc"
SAVEHIST=${HISTSIZE}
VISUAL="$EDITOR"

PATH="$(brew --prefix)/bin":$PATH
PATH+=:node_modules/.bin/
PATH+=:$(find $HOME/Library/Python -maxdepth 2 -type d | tr '\n' ':')
PATH+=$(python3 -c "import sysconfig; print(sysconfig.get_path('purelib'))")
