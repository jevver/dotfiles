#!/usr/bin/env zsh

alias -- -="cd -"
alias cp="cp -riv"
alias find="gfind"
alias grep='grep --color=auto'
alias ls="exa"
alias ll="exa -lagh --git --group-directories-first"
alias mkdir="mkdir -vp"
alias mv="mv -iv"
alias reset="tput reset"
alias clear="reset"
alias ssh="kitty +kitten ssh"
alias ggrep="git rev-list --all | xargs git grep --break"

alias n="cd $HOME/Documents/Notes && $EDITOR -c 'Explore'"
alias sz="source $HOME/.zshrc && reset"
alias up="$HOME/.config/scripts/update"

alias y="yarn"
alias ya="yarn add"
alias yad="yarn add -D"
