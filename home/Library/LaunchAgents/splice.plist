<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>local.splice</string>
	<key>LowPriorityIO</key>
	<true/>
	<key>ProcessType</key>
	<string>Background</string>
	<key>ProgramArguments</key>
	<array>
		<string>zsh</string>
		<string>-ci</string>
		<string>$HOME/.config/scripts/splice.sh</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StandardErrorPath</key>
	<string>/tmp/local.splice.stderr</string>
	<key>StandardOutPath</key>
	<string>/tmp/local.splice.stdout</string>
	<key>WatchPaths</key>
	<array>
		<string>~/Downloads/splice</string>
	</array>
</dict>
</plist>
